{
    "name": "SmartNav",
    "version": "1.0",
    "description": "AR Navigation!",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["handsfree/handsfree.js", "content.js"]
        }
    ],
    "background": {
        "scripts": ["handsfree/handsfree.js", "initHandsFree.js"],
        "persistent": true
    },

    "browser_action": {
        "default_popup": "popup.html"
    },

    "permissions": ["storage", "tabs", "activeTab"]

  }